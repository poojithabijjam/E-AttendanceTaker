<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudAttndncDetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/namestud"
        android:text="namestud"

        android:textColor="#800080"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rollnumstud"
        android:text="rollnum"

        android:textColor="#800080"
        android:layout_below="@id/namestud"
        android:layout_centerHorizontal="true" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rollnumstud"
        android:id="@+id/attendance" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/Lchart"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_alignParentBottom="true"
       ></com.github.mikephil.charting.charts.LineChart>
</RelativeLayout>